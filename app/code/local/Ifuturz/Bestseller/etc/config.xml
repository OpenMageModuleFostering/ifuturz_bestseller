<?xml version="1.0"?>
<config>
	<modules>
		<Ifuturz_Bestseller>
		  <version>0.1.0</version>
		</Ifuturz_Bestseller>
	</modules>
	<global>		
		<blocks>
			<bestseller>
				<class>Ifuturz_Bestseller_Block</class>
			</bestseller>
		</blocks>
		<helpers>
			<bestseller>
				<class>Ifuturz_Bestseller_Helper</class>
			</bestseller>			
		</helpers>
		<models>
			<bestseller>
				<class>Ifuturz_Bestseller_Model</class>
			</bestseller>	
			<reports_resource>
				<rewrite>
					<product_collection>Ifuturz_Bestseller_Model_Resource_Product_Collection</product_collection>
				</rewrite>
			</reports_resource>		
		</models>
		<resources>
            <bestseller_setup>
                <setup>
                    <module>Ifuturz_Bestseller</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bestseller_setup>
            <bestseller_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bestseller_write>
            <bestseller_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bestseller_read>
        </resources>
		<events>
			<controller_action_predispatch>
				<observers>
					<bestseller_install>
						<class>Ifuturz_Bestseller_Model_Observer</class>
						<method>checkInstallation</method>
					</bestseller_install>					
				</observers>
		</controller_action_predispatch>
		</events>		
	</global> 
	<adminhtml>        
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<bestseller>
											<title>Ifuturz -Bestseller</title>
										</bestseller>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>
	<default>
        <bestseller>
            <bestseller_group>
                <bestseller_title>Bestselling Products</bestseller_title>
				<bestseller_maxlimit>6</bestseller_maxlimit>								
            </bestseller_group>
        </bestseller>
    </default>
</config> 